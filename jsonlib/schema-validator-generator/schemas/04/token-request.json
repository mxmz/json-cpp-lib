{
    "oneOf" : [
                    {
                            "description": "http://tools.ietf.org/html/rfc6749#section-4.1.3",
                            "properties": {
                                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "authorization_code" ]
                                },
                                "code": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "redirect_uri": {
                                        "oneOf": [
                                            {
                                                "type" : "string",
                                                "format": "uri"
                                            }, {
                                                    "type" : "string",
                                                    "enum" : [ "urn:ietf:wg:oauth:2.0:oob" ]
                                            }
                                        ]
                                }
                            },
                            "required" : [ "grant_type", "code", "redirect_uri" ]
                    },
                    {
                            "description": "http://tools.ietf.org/html/rfc6749#section-6",
                            "properties": {
                                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "refresh_token" ]
                                },
                                "refresh_token": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "scope": {
                                        "type" : "string",
                                        "minLength": 5,
                                        "pattern": "^(([\\w\\.]+:)+\\w+)(\\s+([\\w\\.]+:)+\\w+)*$"


                                }
                            },
                            "required" : [ "grant_type", "refresh_token"   ]
                    },
                    {
                            "description": "http://tools.ietf.org/html/rfc6749#section-4.3",
                            "properties": {
                                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "password" ]
                                },
                                "username": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "password": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "scope": {
                                        "type" : "string",
                                        "minLength": 5,
                                        "pattern": "^(([\\w\\.]+:)+\\w+)(\\s+([\\w\\.]+:)+\\w+)*$"
                                }
                            },
                            "required" : [ "grant_type", "username", "password" ]
                    },
                    {
                            "description": "KQI custom grant_type for remote identities",
                            "properties": {
                                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "remote" ]
                                },
                                "type": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "token": {
                                        "type" : "string",
                                        "minLength": 1
                                },
                                "scope": {
                                        "type" : "string",
                                        "minLength": 5,
                                        "pattern": "^(([\\w\\.]+:)+\\w+)(\\s+([\\w\\.]+:)+\\w+)*$"
                                }
                            },
                            "required" : [ "grant_type", "type", "token" ]
                    },
                    {
                           "description": "KQI custom grant_type for token revoke request",
                            "properties": {
                                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "revoke_token" ]
                                },
                                "revoke_token": {
                                        "type" : "string",
                                        "minLength": 1
                                }
                            }
                    }
    ],
    "properties": {
                "grant_type": {
                                        "type" : "string",
                                        "enum" : [ "authorization_code", "refresh_token", "password", "revoke_token", "remote" ]
                             }
    },
    "required" : [ "grant_type" ]
}
